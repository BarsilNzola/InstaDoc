{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es2023", "DOM"],
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false
  },
  "include": ["src"]
}
